{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vitest/globals", "node"],
    "baseUrl": "..",
    "paths": {
      "@/*": ["./src/*"],
      "@/ui/*": ["./src/ui/*"]
    }
  },
  "include": ["./**/*.ts", "../src/**/*.test.ts", "../src/**/*.test.tsx"]
}
