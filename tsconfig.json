{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    "lib": ["ES2022"],
    "resolveJsonModule": true,
    "isolatedModules": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/ui/**/*", "node_modules", "dist", "playground"]
}
