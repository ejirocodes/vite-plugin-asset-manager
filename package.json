{
  "name": "vite-plugin-asset-manager",
  "version": "0.1.0",
  "description": "Visual asset management dashboard for Vite projects",
  "keywords": [
    "vite",
    "plugin",
    "assets",
    "images",
    "manager",
    "dashboard",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@fontsource-variable/figtree": "^5.2.10",
    "@phosphor-icons/react": "^2.1.10",
    "chokidar": "^3.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fast-glob": "^3.3.2",
    "shadcn": "^3.7.0",
    "sharp": "^0.33.2",
    "sirv": "^3.0.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^6.0.0"
  },
  "scripts": {
    "build:ui": "vite build --config vite.config.ui.ts",
    "build:plugin": "tsup",
    "build": "npm run build:ui && npm run build:plugin",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  }
}
