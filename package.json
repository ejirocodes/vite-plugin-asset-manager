{
  "name": "vite-plugin-asset-manager",
  "version": "0.0.2",
  "type": "module",
  "description": "Visual asset management for Vite",
  "author": "Ejiro Asiuwhu <ejiroasiuwhu10@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/ejirocodes/vite-plugin-asset-manager#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ejirocodes/vite-plugin-asset-manager.git"
  },
  "bugs": {
    "url": "https://github.com/ejirocodes/vite-plugin-asset-manager/issues"
  },
  "keywords": [
    "vite",
    "plugin",
    "assets",
    "manager",
    "vite-plugin",
    "react-vite-plugin"
  ],
  "scripts": {
    "build:ui": "vite build --config vite.config.ui.ts",
    "build:plugin": "tsup",
    "build": "pnpm run build:ui && pnpm run build:plugin",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:server": "vitest run --project server",
    "test:client": "vitest run --project ui",
    "playground:react": "pnpm --filter playground-react dev",
    "playground:vue": "pnpm --filter playground-vue dev",
    "playground:vanilla": "pnpm --filter playground-vanilla dev",
    "playground:preact": "pnpm --filter playground-preact dev",
    "playground:lit": "pnpm --filter playground-lit dev",
    "playground:svelte": "pnpm --filter playground-svelte dev",
    "playground:solid": "pnpm --filter playground-solid dev",
    "playground:qwik": "pnpm --filter playground-qwik dev"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "peerDependencies": {
    "vite": ">=5.0.0"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@fontsource-variable/figtree": "^5.2.10",
    "@phosphor-icons/react": "^2.1.10",
    "@tanstack/react-virtual": "^3.13.18",
    "archiver": "^7.0.1",
    "chokidar": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fast-glob": "^3.3.3",
    "launch-editor": "^2.12.0",
    "next-themes": "^0.4.6",
    "picocolors": "^1.1.1",
    "react-resizable-panels": "^4.5.4",
    "shadcn": "^3.7.0",
    "sharp": "^0.34.5",
    "sirv": "^3.0.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/archiver": "^7.0.0",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.4.0",
    "memfs": "^4.56.10",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "msw",
      "sharp"
    ],
    "trustedDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
