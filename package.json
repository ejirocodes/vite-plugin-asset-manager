{
  "name": "vite-plugin-asset-manager",
  "version": "0.0.1",
  "type": "module",
  "description": "Visual asset management for Vite",
  "author": "Ejiro Asiuwhu <ejiroasiuwhu10@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/ejirocodes/vite-plugin-asset-manager#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ejirocodes/vite-plugin-asset-manager.git"
  },
  "bugs": {
    "url": "https://github.com/ejirocodes/vite-plugin-asset-manager/issues"
  },
  "keywords": [
    "vite",
    "plugin",
    "assets",
    "manager",
    "vite-plugin",
    "react-vite-plugin"
  ],
  "scripts": {
    "build:ui": "vite build --config vite.config.ui.ts",
    "build:plugin": "tsup",
    "build": "pnpm run build:ui && pnpm run build:plugin",
    "dev": "tsup --watch",
    "prepublishOnly": "pnpm run build"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@fontsource-variable/figtree": "^5.2.10",
    "@phosphor-icons/react": "^2.1.10",
    "chokidar": "^3.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fast-glob": "^3.3.2",
    "next-themes": "^0.4.6",
    "picocolors": "^1.1.1",
    "shadcn": "^3.7.0",
    "sharp": "^0.33.2",
    "sirv": "^3.0.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^6.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ],
    "trustedDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
